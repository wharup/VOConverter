<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="toDTO.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="toDTO.commands.category"
            name="Generate Converting Methods"
            id="toDTO.commands.sampleCommand">
      </command>
      <command
            categoryId="toDTO.commands.category"
            id="toDTO.commands.sampleCommand2"
            name="Generate Converting Methods">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="todto.handlers.SampleHandler"
            commandId="toDTO.commands.sampleCommand">
      </handler>
      <handler
            class="todto.handlers.SampleHandler"
            commandId="toDTO.commands.sampleCommand2">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="toDTO.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+4">
      </key>
      <key
            commandId="toDTO.commands.sampleCommand2"
            contextId="org.eclipse.ui.textEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+5">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="toDTO.menus.VoConverter"
               label="VoConverter"
               mnemonic="V">
            <command
                  commandId="toDTO.commands.sampleCommand"
                  id="toDTO.menus.sampleCommand"
               label="Generate CopyUtil"
                  mnemonic="G"
                  tooltip="Generate VO Converting Methods">
            </command>
         </menu>
         <menu
               id="toDTO.menus.VoConverter"
               label="Convert To CopyUtil"
               mnemonic="V">
            <command
                  commandId="toDTO.commands.sampleCommand2"
                  id="toDTO.menus.sampleCommand"
                  label="Convert To CopyUtil"
                  mnemonic="C"
                  tooltip="Generate VO Converting Methods">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="toDTO.toolbars.sampleToolbar">
            <command
                  id="toDTO.toolbars.sampleCommand"
                  commandId="toDTO.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="VO Converter">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
